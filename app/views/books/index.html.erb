<div class="containt">
  <% if flash[:notice] %>
    <p class="flash"><%= flash[:notice] %></p>
  <% end %>
  <h2>Books</h2>
  <table>
    <tr>
      <th width=240px>Title</th>
      <th width=500px>Body</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <div class="btn">
          <td><%= link_to "show", book_path(book.id) %></td>
          <td><%= link_to "edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </div>
      </tr>
    <% end %>
  </table>

  <div class="sub">
    <h3>New book</h3>
    <% if @book.errors.any? %>
    <div class="errors">
      <div class="error">
        <p><%= @book.errors.count %><span> errors prohibited this book from being saved:</span></p>
      </div>
      <ul class="ul">
        <% @book.errors.full_messages.each do |message| %>
          <li><span>ãƒ»</span><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_with model: @book do |f| %>
      <P>Title</P>
      <span><%= f.text_field :title %></span>
      <P>Body</P>
      <sapn><%= f.text_area :body %></sapn>
      <br>
      <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>

